{
    "version": 2,
    "builds": [
      {
        "src": "src/index.html",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist/my-angular-app"
        }
      },
      {
        "src": "db.json",
        "use": "@vercel/json-server"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/db.json"
      },
      {
        "src": "/(.*)",
        "dest": "/"
      }
    ]
  }